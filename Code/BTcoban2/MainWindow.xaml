<Window x:Class="BTcoban2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BTcoban2"
        mc:Ignorable="d"
        Title="Check box Sự kiện " Height="450" Width="800">
    <StackPanel>
        <Label>Bạn thích những gì?</Label> 
        <CheckBox Name="ChKToanBo"
               Checked="ChKToanBo_Checked"
               Unchecked="ChKToanBo_Unchecked">
               Thích toàn bộ hoạt động
        </CheckBox>
        <StackPanel Margin="20.0">
                <CheckBox Name="ChkCongNghe"
                    Checked="chkSub_CheckedChanged"
                    Unchecked="chkSub_CheckedChanged">
                    Thích Nghiên cứu công nghệ
                </CheckBox> 
                <CheckBox Name="chkDuLich"
                    Checked ="chkSub_CheckedChanged"
                    Unchecked="chkSub_CheckedChanged">
                    Thích đi du lịch 
                </CheckBox>
            <CheckBox Name="chkDaBong"
                        Checked="chkSub_CheckedChanged"
                      Unchecked="chkSub_CheckedChanged">
                      Thích đá bóng 
            </CheckBox>
            <CheckBox Name="chkCemPhim"
                      Checked="chkSub_CheckedChanged"
          Unchecked="chkSub_CheckedChanged">
                Thích xem phim 
            </CheckBox>
        </StackPanel>
    </StackPanel>
</Window>
