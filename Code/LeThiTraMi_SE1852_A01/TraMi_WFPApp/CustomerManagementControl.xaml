<UserControl x:Class="TraMi_WFPApp.CustomerManagementControl" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Height="Auto" Width="800">
    <Grid Background="#f9fafb">
        <StackPanel Margin="20">
            <!-- Tiêu đề -->
            <TextBlock Text="QUẢN LÝ KHÁCH HÀNG"
                   FontSize="22"
                   FontWeight="Bold"
                   Foreground="#2b3e50"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

            <!-- Thanh tìm kiếm và thao tác -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,20">
                <TextBox x:Name="txtSearch"
                     Width="220"
                     Height="30"
                     Margin="0,0,10,0"
                     Padding="5"
                     FontSize="14"
                     VerticalContentAlignment="Center"
                     Background="White"
                     BorderBrush="#ccc"
                     BorderThickness="1"
                     ToolTip="Nhập tên hoặc SĐT khách hàng"/>
                <Button Content="🔍 Tìm kiếm"
                    Width="100"
                    Height="30"
                    Margin="0,0,10,0"
                    Background="#2d89ef"
                    Foreground="White"
                    BorderBrush="#2d89ef"
                    FontWeight="Bold"
                    Cursor="Hand"
                    Click="BtnSearch_Click"/>
                <Button Content="➕ Thêm"
                    Width="100"
                    Height="30"
                    Background="#28a745"
                    Foreground="White"
                    BorderBrush="#28a745"
                    FontWeight="Bold"
                    Cursor="Hand"
                    Click="BtnAdd_Click"/>
            </StackPanel>

            <!-- DataGrid hiển thị danh sách khách hàng -->
            <DataGrid x:Name="dgCustomers"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  Height="350"
                  RowBackground="White"
                  AlternatingRowBackground="#f0f0f0"
                  BorderBrush="#ddd"
                  BorderThickness="1"
                  CanUserAddRows="False"
                  HeadersVisibility="Column"
                  ColumnHeaderHeight="36"
                  FontSize="14"
                  GridLinesVisibility="Horizontal"
                  RowHeight="36">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding CustomerID}" Width="60"/>
                    <DataGridTextColumn Header="Tên công ty" Binding="{Binding CompanyName}" Width="*"/>
                    <DataGridTextColumn Header="Tên liên hệ" Binding="{Binding ContactName}" Width="*"/>
                    <DataGridTextColumn Header="SĐT" Binding="{Binding Phone}" Width="120"/>
                    <DataGridTemplateColumn Header="Tác vụ" Width="150">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Content="✏️"
                                        ToolTip="Sửa"
                                        Width="34"
                                        Height="30"
                                        Margin="4,0"
                                        Background="#ffc107"
                                        Foreground="White"
                                        BorderBrush="#ffc107"
                                        FontWeight="Bold"
                                        Cursor="Hand"
                                        Click="BtnEdit_Click"/>
                                    <Button Content="🗑️"
                                        ToolTip="Xóa"
                                        Width="34"
                                        Height="30"
                                        Margin="4,0"
                                        Background="#dc3545"
                                        Foreground="White"
                                        BorderBrush="#dc3545"
                                        FontWeight="Bold"
                                        Cursor="Hand"
                                        Click="BtnDelete_Click"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</UserControl>